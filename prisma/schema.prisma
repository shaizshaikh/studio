// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  // Explicitly set binaryTargets to try and find a compatible engine for the environment
  // Using only linux-musl as a last resort attempt for environments missing specific OpenSSL versions.
  binaryTargets = ["linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  date        DateTime
  tags        String[]
  excerpt     String   @db.Text
  rawContent  String   @db.Text // Storing raw Markdown content
  htmlContent String   @db.Text // Storing HTML generated from Markdown
  image       String?
  imageHint   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
