// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  date        DateTime // Publication date
  tags        String[]
  excerpt     String
  rawContent  String   @db.Text // Use Text for potentially long content
  htmlContent String   @db.Text // Store rendered HTML
  image       String?
  imageHint   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
}
