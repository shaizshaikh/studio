// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  // Common binary targets for development and CI/CD environments.
  // When using Data Proxy at runtime, the specific local binary isn't critical for that runtime.
  binaryTargets = ["native", "linux-musl"]
}

model Article {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  date        DateTime
  tags        String[]
  excerpt     String
  rawContent  String   @db.Text // For potentially long markdown content
  htmlContent String   @db.Text // For potentially long HTML content
  image       String?
  imageHint   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
