// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  // Attempt to use linux-musl which is often more self-contained
  // and might avoid issues with specific OpenSSL versions in restricted environments.
  binaryTargets = ["linux-musl"]
}

model Article {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  date        DateTime
  tags        String[]
  excerpt     String
  rawContent  String   @db.Text // For potentially long markdown content
  htmlContent String   @db.Text // For potentially long HTML content
  image       String?
  imageHint   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
